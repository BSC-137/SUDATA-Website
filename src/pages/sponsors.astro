---
import Layout from '../layouts/Layout.astro';
import PastPartnersCarousel from '../components/PastPartnersCarousel.jsx';
import CopyEmailButton from '../components/CopyEmailButton.jsx';

const sponsors = [
  {
    name: 'Jane Street',
    desc: 'Quantitative trading firm applying rigorous analytical thinking and functional programming to global markets.',
    src: 'public/sponsors/current-sponsors/jane-street.png',
    href: 'https://www.janestreet.com',
    tag: '[ INDUSTRY_PARTNER ]',
  },
  {
    name: 'Atlassian',
    desc: 'Enterprise software powering team collaboration at scale across every industry.',
    src: 'public/sponsors/current-sponsors/atlassian.png',
    href: 'https://www.atlassian.com',
    tag: '[ SPONSOR ]',
  },
  {
    name: 'Westpac',
    desc: "Australia's first bank driving digital transformation through data analytics and machine learning.",
    src: 'public/sponsors/current-sponsors/westpac.png',
    href: 'https://www.westpac.com.au',
    tag: '[ SPONSOR ]',
  },
  {
    name: 'IMC Trading',
    desc: 'Global market maker powered by advanced algorithms and high-performance engineering.',
    src: 'public/sponsors/current-sponsors/imc-trading.webp',
    href: 'https://www.imc.com',
    tag: '[ SPONSOR ]',
  },
];

const delayClasses = ['delay-0', 'delay-100', 'delay-200', 'delay-300'];
---

<Layout title="Sponsors | SUDATA">
  <div class="flex flex-col w-full max-w-6xl mx-auto space-y-24 pt-32 pb-24 px-4">

    <!-- Page title -->
    <header class="reveal-on-scroll text-center space-y-4">
      <h1 class="text-4xl md:text-6xl font-bold text-sudata-neon tracking-widest neon-text-shadow font-mono-tech">
        OUR SPONSORS
      </h1>
      <p class="text-sudata-grey font-mono-tech text-lg tracking-wide">
        [ Powering the Next Generation of Data Leaders ]
      </p>
    </header>

    <section class="reveal-on-scroll terminal-block scanline-overlay p-8 md:p-12">
      <div class="relative z-10">
        <div class="font-mono-tech text-sudata-neon/80 text-sm tracking-[0.2em] mb-6 flex items-center gap-2">
          <span class="animate-flicker">&gt;_</span>
          <span>[SECTION: 2026_SPONSORS]</span>
        </div>

        <h2 class="text-2xl md:text-3xl font-bold text-white font-mono-tech tracking-widest mb-8">
          2026 SUDATA Sponsors
        </h2>

        <!-- [SECTION: 2026_SPONSORS] -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {sponsors.map((s, i) => (
            <a
              href={s.href}
              target="_blank"
              rel="noopener noreferrer"
              class={`group glass-panel-3d p-8 flex flex-col items-start text-left h-full relative overflow-hidden scanline-overlay ${delayClasses[i % delayClasses.length]}`}
            >
              <div class="relative z-10 mb-6 font-mono-tech text-sudata-neon text-xs tracking-[0.2em] opacity-80 whitespace-nowrap">
                {s.tag ?? '[ SPONSOR ]'}
              </div>

              <div class="relative z-10 mb-6 flex justify-center w-full">
                <img
                  src={s.src}
                  alt={s.name}
                  class="w-28 h-14 object-contain"
                  loading="lazy"
                  decoding="async"
                />
              </div>

              <h3 class="relative z-10 text-lg font-bold text-white mb-3 tracking-widest group-hover:text-sudata-neon transition-colors">
                {s.name}
              </h3>

              <p class="relative z-10 text-xs font-mono-tech text-sudata-grey/90 leading-relaxed">
                {s.desc}
              </p>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- [SECTION: LEGACY_PARTNERS] -->
    <section class="reveal-on-scroll w-full">
      <div class="font-mono-tech text-sudata-neon/80 text-sm tracking-[0.2em] mb-6 flex justify-center gap-2">
        <span class="animate-flicker">_</span>
        <span>[SECTION: LEGACY_PARTNERS]</span>
      </div>
      <h2 class="text-2xl md:text-3xl font-bold text-white font-mono-tech tracking-widest mb-4 text-center">
        Our Network
      </h2>
      <p class="text-sudata-grey font-mono-tech text-sm md:text-base tracking-wide text-center mb-10 max-w-2xl mx-auto">
        Companies, speakers, and partners who have collaborated with SUDATA to shape the future of data science.
      </p>
      <PastPartnersCarousel client:visible />
    </section>

    <!-- [SECTION: WHY_PARTNER] -->
    <section class="reveal-on-scroll terminal-block scanline-overlay p-8 md:p-12">
      <div class="relative z-10">
        <div class="font-mono-tech text-sudata-neon/80 text-sm tracking-[0.2em] mb-6 flex items-center gap-2">
          <span class="animate-flicker">_</span>
          <span>[SECTION: WHY_PARTNER]</span>
        </div>
        <h2 class="text-2xl md:text-3xl font-bold text-white font-mono-tech tracking-widest mb-6">
          Why Partner With SUDATA?
        </h2>
        <div class="space-y-4 text-sudata-grey font-mono-tech text-base md:text-lg leading-relaxed">
          <p>
            We are the <span class="text-sudata-neon">direct pipeline</span> to Sydney's most ambitious analytical minds...
          </p>
          <p>
            Through SUDATA, you gain access to <span class="text-white">high-potential talent</span>...
          </p>
          <p>
            Our partnerships are built on <span class="text-sudata-neon">flexibility and impact</span>...
          </p>
        </div>
      </div>
    </section>

		<!-- [SECTION: PARTNERSHIP_PACKAGES] -->
		<section class="reveal-on-scroll terminal-block scanline-overlay p-8 md:p-12">
			<div class="relative z-10">
				<div class="font-mono-tech text-sudata-neon/80 text-sm tracking-[0.2em] mb-6 flex items-center gap-2">
					<span class="animate-flicker">_</span>
					<span>[SECTION: PARTNERSHIP_PACKAGES]</span>
				</div>
				<h2 class="text-2xl md:text-3xl font-bold text-white font-mono-tech tracking-widest mb-8">
					Partnership Packages
				</h2>

				<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

					<!-- Industry Partner Package -->
					<div class="reveal-on-scroll group glass-panel-3d p-10 flex flex-col items-start text-left h-full relative overflow-hidden scanline-overlay">
						<div class="relative z-10 mb-6 font-mono-tech text-sudata-neon text-sm tracking-[0.2em] opacity-80 whitespace-nowrap">
							[ 01_INDUSTRY_PARTNER ]
						</div>
						<div class="relative z-10 mb-2">
							<span class="text-3xl font-bold text-sudata-neon font-mono-tech neon-text-shadow">$2,000</span>
						</div>
						<h3 class="relative z-10 text-2xl font-bold text-white mb-2 tracking-widest group-hover:text-sudata-neon transition-colors font-mono-tech">
							Industry Partner Package
						</h3>
						<p class="relative z-10 text-sm font-mono-tech text-sudata-grey/80 mb-6 tracking-wide">
							Maximum Brand Integration
						</p>
						<ul class="relative z-10 space-y-3 text-sm font-mono-tech text-sudata-grey/90 leading-relaxed">
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Dedicated Account Manager</li>
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Year-round marketing access</li>
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Exclusive bespoke event per semester</li>
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Guaranteed thought leadership spots</li>
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>VIP access to all SUDATA events</li>
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Premier brand placement</li>
						</ul>
					</div>

					<!-- Technical Package -->
					<div class="reveal-on-scroll group glass-panel-3d p-10 flex flex-col items-start text-left h-full relative overflow-hidden delay-100 scanline-overlay">
						<div class="relative z-10 mb-6 font-mono-tech text-sudata-neon text-sm tracking-[0.2em] opacity-80 whitespace-nowrap">
							[ 02_TECHNICAL ]
						</div>
						<div class="relative z-10 mb-2">
							<span class="text-3xl font-bold text-sudata-neon font-mono-tech neon-text-shadow">$1,250</span>
						</div>
						<h3 class="relative z-10 text-2xl font-bold text-white mb-2 tracking-widest group-hover:text-sudata-neon transition-colors font-mono-tech">
							Technical Package
						</h3>
						<p class="relative z-10 text-sm font-mono-tech text-sudata-grey/80 mb-6 tracking-wide">
							Showcase Your Engineering Culture
						</p>
						<ul class="relative z-10 space-y-3 text-sm font-mono-tech text-sudata-grey/90 leading-relaxed">
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Guaranteed judging position in major competition</li>
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Dedicated technical workshop slot</li>
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Thought leadership seminar opportunity</li>
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Two marketing features across channels</li>
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Access to Datathons & Case Competitions</li>
						</ul>
					</div>

					<!-- Recruitment Package -->
					<div class="reveal-on-scroll group glass-panel-3d p-10 flex flex-col items-start text-left h-full relative overflow-hidden delay-200 scanline-overlay">
						<div class="relative z-10 mb-6 font-mono-tech text-sudata-neon text-sm tracking-[0.2em] opacity-80 whitespace-nowrap">
							[ 03_RECRUITMENT ]
						</div>
						<div class="relative z-10 mb-2">
							<span class="text-3xl font-bold text-sudata-neon font-mono-tech neon-text-shadow">$1,250</span>
						</div>
						<h3 class="relative z-10 text-2xl font-bold text-white mb-2 tracking-widest group-hover:text-sudata-neon transition-colors font-mono-tech">
							Recruitment Package
						</h3>
						<p class="relative z-10 text-sm font-mono-tech text-sudata-grey/80 mb-6 tracking-wide">
							Drive Your Recruitment Strategy
						</p>
						<ul class="relative z-10 space-y-3 text-sm font-mono-tech text-sudata-grey/90 leading-relaxed">
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Comprehensive recruitment campaign (6 Instagram posts)</li>
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>'Pathways in Data' industry spotlight</li>
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Newsletter feature & brand placement</li>
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Direct access to penultimate year students</li>
							<li class="flex items-start gap-2"><span class="text-sudata-neon mt-0.5">›</span>Priority logo placement</li>
						</ul>
					</div>

				</div>

				<div class="mt-12 text-center">
					<p class="text-sudata-grey font-mono-tech text-sm mb-6">
						All sponsors receive: Free introductory post • Invitation to Careers in Data Science • Brand on website
					</p>
					<div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-6">
						<a
							href="/SUDATA_Sponsorships_Prospectus_2026.pdf"
							download="SUDATA_Sponsorships_Prospectus_2026.pdf"
							target="_blank"
							rel="noopener noreferrer"
							class="group relative px-8 py-3 bg-transparent border-2 border-sudata-neon text-sudata-neon font-mono-tech tracking-wider hover:bg-sudata-neon/10 transition-all duration-300 flex items-center gap-2"
						>
							<span>DOWNLOAD PROSPECTUS</span>
							<svg class="w-4 h-4 group-hover:translate-y-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
							</svg>
						</a>
						<a
							href="mailto:sponsorships@sudata.org?subject=Partnership%20Inquiry%20-%20SUDATA%202026"
							class="group relative px-8 py-3 bg-sudata-neon text-black font-mono-tech font-bold tracking-wider hover:bg-sudata-neon/90 transition-all duration-300 flex items-center gap-2"
						>
							<span>GET IN TOUCH</span>
							<svg class="w-4 h-4 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
							</svg>
						</a>
					</div>
					<div class="flex justify-center">
						<CopyEmailButton client:visible />
					</div>
				</div>
			</div>
		</section>

		<!-- // BUILD_THE_FUTURE_TOGETHER -->
		<footer class="reveal-on-scroll terminal-block scanline-overlay p-8 md:p-12">
			<div class="relative z-10 text-center">
				<div class="font-mono-tech text-sudata-neon/80 text-sm tracking-[0.2em] mb-6 flex items-center justify-center gap-2">
					<span>// BUILD_THE_FUTURE_TOGETHER</span>
				</div>
				<h3 class="text-xl md:text-2xl font-bold text-white font-mono-tech tracking-wider mb-4">
					Ready to Connect With Tomorrow's Data Leaders?
				</h3>
				<p class="text-sudata-grey font-mono-tech text-base max-w-2xl mx-auto mb-8">
					Join the organizations shaping the next generation of analytical thinkers. Partner with SUDATA to access Sydney's brightest minds and drive real impact.
				</p>
				<div class="flex flex-col items-center gap-4">
					<a
						href="mailto:sponsorships@sudata.org?subject=Sponsorship%20Inquiry%20-%20SUDATA%202026&body=Hi%20SUDATA%20Team%2C%0A%0AI'm%20interested%20in%20learning%20more%20about%20sponsorship%20opportunities%20for%202026.%0A%0AThank%20you!"
						class="inline-block px-10 py-4 bg-sudata-neon text-black font-mono-tech font-bold tracking-wider hover:bg-sudata-neon/90 transition-all duration-300 text-lg"
					>
						BECOME A SPONSOR
					</a>
					<CopyEmailButton client:visible />
				</div>
			</div>
		</footer>

	</div>
</Layout>
