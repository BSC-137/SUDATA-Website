					<script>
						if (typeof window !== 'undefined' && window.innerWidth < 768) {
							document.querySelectorAll('.pkg-item').forEach(function(el) { el.removeAttribute('open'); });
						}
						document.querySelectorAll('.pkg-item').forEach(function(el) {
							el.addEventListener('toggle', function() {
								var chevron = el.querySelector('.pkg-chevron');
								if (chevron) chevron.textContent = el.open ? '▾' : '▸';
							});
						});
					</script>

				</div>

				<div class="mt-12 text-center">
					<p class="text-sudata-grey font-mono-tech text-sm mb-6">
						All sponsors receive: Free introductory post • Invitation to Careers in Data Science • Brand on website
					</p>
					<div class="flex flex-row flex-wrap gap-3 sm:gap-4 justify-center items-center mb-6">
