---
import '../styles/global.css';

interface Props {
	title?: string;
}

const { title = "SUDATA" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col bg-sudata-navy relative">
		<!-- Glassmorphic Navbar -->
		<nav class="fixed top-6 left-0 right-0 mx-auto max-w-2xl z-50">
			<div class="backdrop-blur-md bg-white/10 border border-white/20 rounded-2xl shadow-lg shadow-sudata-cyan/10">
				<div class="px-6 py-3">
					<div class="flex items-center justify-between">
						<!-- Logo/Brand -->
						<a href="/" class="text-white font-bold text-lg tracking-wider hover:text-sudata-cyan transition-colors">
							SUDATA
						</a>
						
						<!-- Navigation Links -->
						<div class="flex space-x-1">
							<a href="/" class="text-white/80 hover:text-white px-4 py-2 rounded-xl text-sm font-medium transition-all duration-300 hover:bg-white/10">
								Home
							</a>
							<a href="/events" class="text-white/80 hover:text-white px-4 py-2 rounded-xl text-sm font-medium transition-all duration-300 hover:bg-white/10">
								Events
							</a>
							<a href="/about" class="text-white/80 hover:text-white px-4 py-2 rounded-xl text-sm font-medium transition-all duration-300 hover:bg-white/10">
								About
							</a>
						</div>
					</div>
				</div>
			</div>
		</nav>

		<main class="flex-grow max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 w-full relative z-10">
			<slot />
		</main>

		<footer class="border-t border-sudata-grey/20 py-6 mt-auto relative z-10 bg-sudata-navy/80 backdrop-blur-sm">
			<div class="max-w-7xl mx-auto px-4 text-center text-sm text-sudata-grey/60">
				&copy; {new Date().getFullYear()} SUDATA. All rights reserved.
			</div>
		</footer>
	</body>
</html>
