		<script>
			// Advanced Vapor Pixel Cursor Trail
			document.addEventListener('mousemove', (e) => {
				const pixel = document.createElement('div');
				pixel.classList.add('pixel-trail');
				
				// Snap to grid for pixel effect (e.g., 4px grid)
				const gridSize = 4;
				const x = Math.floor(e.clientX / gridSize) * gridSize;
				const y = Math.floor(e.clientY / gridSize) * gridSize;
				
				// Randomize life and size slightly for "vapor" look
				const randomScale = 0.5 + Math.random(); 
				const randomLife = 400 + Math.random() * 400; 
				
				pixel.style.left = `${x}px`;
				pixel.style.top = `${y}px`;
				pixel.style.transform = `scale(${randomScale})`;
				pixel.style.opacity = `${0.5 + Math.random() * 0.5}`;
				
				document.body.appendChild(pixel);
				
				setTimeout(() => {
					pixel.remove();
				}, randomLife);
			});

			// Scroll-Driven "Data Stream" Reveal
			const observerOptions = {
				root: null,
				rootMargin: '0px',
				threshold: 0.15 
			};

			const observer = new IntersectionObserver((entries, observer) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
                        // Enter viewport: Fade In & Slide Up
						entry.target.classList.remove('opacity-0', 'translate-y-[40px]');
						entry.target.classList.add('opacity-100', 'translate-y-0');
					} else {
                        // Leave viewport: Fade Out & Slide Down
                        entry.target.classList.remove('opacity-100', 'translate-y-0');
						entry.target.classList.add('opacity-0', 'translate-y-[40px]');
                    }
				});
			}, observerOptions);

			document.querySelectorAll('.reveal-on-scroll').forEach((el) => {
                // Initial State
				el.classList.add('opacity-0', 'translate-y-[40px]', 'transition-all', 'duration-1000', 'ease-[cubic-bezier(0.16,1,0.3,1)]');
				observer.observe(el);
			});
		</script>
